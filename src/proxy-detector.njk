<script>
  async function fetchIPData(ip = '') {
    const resultsContainer = document.getElementById('resultsContainer');
    const errorState = document.getElementById('errorState');
    const loadingState = document.getElementById('loadingState');
    
    resultsContainer.classList.add('hidden');
    errorState.classList.add('hidden');
    loadingState.classList.remove('hidden');

    try {
      const url = ip ? `https://api.ipquery.io/${ip}?format=json` : 'https://api.ipquery.io/?format=json';
      const response = await fetch(url);
      const data = await response.json();
      
      loadingState.classList.add('hidden');
      displayResults(data);
      resultsContainer.classList.remove('hidden');
    } catch (error) {
      console.error('Error fetching data:', error);
      loadingState.classList.add('hidden');
      errorState.classList.remove('hidden');
    }
  }

  function displayResults(data) {
    document.getElementById('ipAddress').textContent = data.ip || 'N/A';
    document.getElementById('isp').textContent = data.isp?.isp || 'N/A';
    document.getElementById('country').textContent = `${data.location?.country || 'N/A'} (${data.location?.country_code || 'N/A'})`;
    document.getElementById('city').textContent = `${data.location?.city || 'N/A'}, ${data.location?.state || 'N/A'}`;
    document.getElementById('timezone').textContent = data.location?.timezone || 'N/A';

    updateStatus('mobile', data.risk?.is_mobile);
    updateStatus('vpn', data.risk?.is_vpn);
    updateStatus('tor', data.risk?.is_tor);
    updateStatus('proxy', data.risk?.is_proxy);
    updateStatus('datacenter', data.risk?.is_datacenter);

    const riskScore = data.risk?.risk_score ?? 0;
    document.getElementById('riskScore').textContent = riskScore;
    
    let riskDescription = '';
    if (riskScore === 0) {
      riskDescription = 'Clean Connection - No threats detected';
    } else if (riskScore < 50) {
      riskDescription = 'Low Risk - Minor concerns detected';
    } else if (riskScore < 75) {
      riskDescription = 'Medium Risk - Moderate concerns detected';
    } else {
      riskDescription = 'High Risk - Significant concerns detected';
    }
    document.getElementById('riskDescription').textContent = riskDescription;
  }

  function updateStatus(type, isActive) {
    const statusElement = document.getElementById(`${type}Status`);
    const iconElement = document.getElementById(`${type}Icon`);
    
    if (isActive) {
      statusElement.textContent = 'Yes';
      statusElement.classList.add('text-red-500');
      statusElement.classList.remove('text-green-500');
      iconElement.classList.add('text-red-500');
      iconElement.classList.remove('text-green-500');
    } else {
      statusElement.textContent = 'No';
      statusElement.classList.add('text-green-500');
      statusElement.classList.remove('text-red-500');
      iconElement.classList.add('text-green-500');
      iconElement.classList.remove('text-red-500');
    }
  }

  document.getElementById('detectBtn').addEventListener('click', () => fetchIPData());
  document.getElementById('checkIpBtn').addEventListener('click', () => {
    const ip = document.getElementById('ipInput').value.trim();
    if (ip) {
      fetchIPData(ip);
    } else {
      alert('Please enter a valid IP address');
    }
  });
  document.getElementById('ipInput').addEventListener('keypress', (e) => {
    if (e.key === 'Enter') {
      const ip = document.getElementById('ipInput').value.trim();
      if (ip) fetchIPData(ip);
    }
  });
</script>
