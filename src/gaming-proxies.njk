{% import "ads-section.njk" as adsSection %}

<h1 class="text-2xl md:text-3xl font-bold mb-2 flex items-center">
  <span class="material-icons text-primary mr-2 text-4xl">{{ proxies.pageContent.gamingProxies.icon }}</span>
  {{ proxies.pageContent.gamingProxies.title }}
</h1>
<p class="text-subtext-light dark:text-subtext-dark mb-8">{{ proxies.pageContent.gamingProxies.subtitle }}</p>

<!-- Ads Section -->
{{ adsSection.renderAds(ads.gamingProxiesAds) }}

