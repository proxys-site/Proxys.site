                <div class="flex items-center gap-1 text-yellow-400">
                {% for i in range(0, 4) %}
                <span class="material-icons text-sm">star</span>
                {% endfor %}
                <span class="material-icons text-sm">star_half</span>
                <span class="text-subtext-light dark:text-subtext-dark ml-1">({{ proxy.rating }})</span>
              </div>
                {% if false %}
                <span class="best-offer-badge">
                  ‚≠ê Best Offer
                </span>
                {% endif %}
              </div>
            </div>
            <p class="text-sm text-subtext-light dark:text-subtext-dark mt-1">{{ proxy.description }}</p>
            <div class="mt-4 text-sm space-y-2">
              <p><strong class="font-semibold">Best For:</strong> {{ proxy.bestFor }}</p>
              <p><strong class="font-semibold">IP Pool:</strong> {{ proxy.ipPool }}</p>
              <p><strong class="font-semibold">Trust Score:</strong> {{ proxy.trustScore }}</p>
              <p><strong class="font-semibold">Locations:</strong> {{ proxy.locations }}</p>
              {% if proxy.discountCode %}
              <p><strong class="font-semibold text-green-600 dark:text-green-400">üí∞ Discount:</strong> <span class="discount-code-text">{{ proxy.discountCode }}</span></p>
              {% endif %}
              {% if proxy.pricing %}
              <p><strong class="font-semibold text-blue-600 dark:text-blue-400">üíµ Pricing:</strong> {{ proxy.pricing }}</p>
              {% endif %}
            </div>
            <a class="mt-4 inline-block bg-primary text-white font-semibold py-2 px-6 rounded hover:bg-blue-600 transition-colors" href="{{ proxy.url }}" target="_blank" rel="nofollow noopener">Visit Site ‚Üí</a>
          </div>
        </div>
      </div>
      {% endfor %}
    {% else %}
      <div class="bg-card-light dark:bg-card-dark p-4 sm:p-6 rounded-lg border border-border-light dark:border-border-dark">
        <p class="text-center text-subtext-light dark:text-subtext-dark py-8">
          No providers added yet. Use the admin app to add providers.
        </p>
      </div>
    {% endif %}
  </div>
  
  <aside class="space-y-4">
    <div class="grid grid-cols-1 gap-3">
      <a class="flex items-center p-3 bg-card-light dark:bg-card-dark rounded-lg border border-border-light dark:border-border-dark hover:shadow-lg transition-shadow text-sm" href="/proxy-browser">
        <span class="material-icons mr-2 text-subtext-light dark:text-subtext-dark text-xl">public</span>
        <span class="font-medium">Proxy Browser</span>
      </a>
      <a class="flex items-center p-3 bg-card-light dark:bg-card-dark rounded-lg border border-border-light dark:border-border-dark hover:shadow-lg transition-shadow text-sm" href="/residential-proxies">
        <span class="material-icons mr-2 text-subtext-light dark:text-subtext-dark text-xl">home</span>
        <span class="font-medium">Residential Proxies</span>
      </a>
      <a class="flex items-center p-3 bg-card-light dark:bg-card-dark rounded-lg border border-border-light dark:border-border-dark hover:shadow-lg transition-shadow text-sm" href="/datacenter-proxies">
