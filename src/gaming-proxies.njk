      </a>
      <a class="flex items-center p-3 bg-card-light dark:bg-card-dark rounded-lg border border-border-light dark:border-border-dark hover:shadow-lg transition-shadow text-sm" href="/anonymous-proxies">
        <span class="material-icons mr-2 text-subtext-light dark:text-subtext-dark text-xl">visibility_off</span>
        <span class="font-medium">Anonymous Proxies</span>
      </a>
      <a class="flex items-center p-3 bg-primary text-white rounded-lg border border-primary hover:shadow-lg transition-shadow text-sm" href="/gaming-proxies">
        <span class="material-icons mr-2 text-xl">sports_esports</span>
        <span class="font-medium">Gaming Proxies</span>
      </a>
      <a class="flex items-center p-3 bg-card-light dark:bg-card-dark rounded-lg border border-border-light dark:border-border-dark hover:shadow-lg transition-shadow text-sm" href="/streaming-proxies">
        <span class="material-icons mr-2 text-subtext-light dark:text-subtext-dark text-xl">live_tv</span>
        <span class="font-medium">Streaming Proxies</span>
      </a>
      <a class="flex items-center p-3 bg-card-light dark:bg-card-dark rounded-lg border border-border-light dark:border-border-dark hover:shadow-lg transition-shadow text-sm" href="/business-proxies">
        <span class="material-icons mr-2 text-subtext-light dark:text-subtext-dark text-xl">business_center</span>
        <span class="font-medium">Business Proxies</span>
      </a>
      <a class="flex items-center p-3 bg-card-light dark:bg-card-dark rounded-lg border border-border-light dark:border-border-dark hover:shadow-lg transition-shadow text-sm" href="/privacy-proxies">
        <span class="material-icons mr-2 text-subtext-light dark:text-subtext-dark text-xl">privacy_tip</span>
        <span class="font-medium">Privacy Proxies</span>
      </a>
      <a class="flex items-center p-3 bg-card-light dark:bg-card-dark rounded-lg border border-border-light dark:border-border-dark hover:shadow-lg transition-shadow text-sm" href="/vpn-proxies">
        <span class="material-icons mr-2 text-subtext-light dark:text-subtext-dark text-xl">vpn_key</span>
        <span class="font-medium">VPN Proxies</span>
      </a>
      <a class="flex items-center p-3 bg-card-light dark:bg-card-dark rounded-lg border border-border-light dark:border-border-dark hover:shadow-lg transition-shadow text-sm" href="/free-proxy-sites">
        <span class="material-icons mr-2 text-subtext-light dark:text-subtext-dark text-xl">price_check</span>
        <span class="font-medium">Free Proxy Sites</span>
      </a>
    </div>
    {# Check if script exists, otherwise show image #}
    {% if site.gamingSidebar.script %}
    <div class="bg-gray-100 dark:bg-gray-800 p-6 rounded-lg flex items-center justify-center sidebar-ad-container">
      {{ site.gamingSidebar.script | safe }}
    </div>
    {% elif site.gamingSidebar.image %}
    <div class="bg-gray-100 dark:bg-gray-800 p-6 rounded-lg flex items-center justify-center">
      <img alt="{{ site.gamingSidebar.imageAlt or 'Advertisement' }}" class="max-w-full h-auto" src="{{ site.gamingSidebar.image }}"/>
    </div>
    {% endif %}
  </aside>
</div>

{% if proxies.gamingProxies.length > 0 %}
<div class="mt-12">
  <h2 class="text-2xl font-bold mb-6">Comparison of Top Gaming Proxies Providers</h2>
  <div class="overflow-x-auto">
    <table class="w-full text-sm text-left text-subtext-light dark:text-subtext-dark">
      <thead class="text-xs text-text-light dark:text-text-dark uppercase bg-gray-50 dark:bg-gray-700">
        <tr>
          <th class="px-6 py-3" scope="col">Provider</th>
          <th class="px-6 py-3" scope="col">IP Pool</th>
          <th class="px-6 py-3" scope="col">Success Rate</th>
          <th class="px-6 py-3" scope="col">Locations</th>
          <th class="px-6 py-3" scope="col">Rating</th>
        </tr>
      </thead>
      <tbody>
        {% for proxy in proxies.gamingProxies %}
        <tr class="bg-card-light dark:bg-card-dark border-b dark:border-gray-700{% if loop.last %} border-b-0{% endif %}">
          <th class="px-6 py-4 font-bold whitespace-nowrap" scope="row">
            <a href="{{ proxy.url }}" target="_blank" rel="nofollow noopener" class="text-blue-600 dark:text-yellow-500 hover:underline">
              {{ proxy.name }}
            </a>
          </th>
          <td class="px-6 py-4">{{ proxy.ipPool }}</td>
          <td class="px-6 py-4">{{ proxy.trustScore }}</td>
          <td class="px-6 py-4">{{ proxy.locations }}</td>
          <td class="px-6 py-4">{{ proxy.rating }}</td>
        </tr>
        {% endfor %}
      </tbody>
    </table>
  </div>
</div>
{% endif %}

<div class="mt-12 bg-card-light dark:bg-card-dark p-6 rounded-lg border border-border-light dark:border-border-dark">
  <h3 class="text-lg font-bold mb-4">{{ site.gamingSidebar.title or "About Gaming Proxies" }}</h3>
  <p class="text-sm text-subtext-light dark:text-subtext-dark leading-relaxed">
    {{ site.gamingSidebar.description or "Information about gaming proxies." }}
  </p>
  {% if site.gamingSidebar.benefits %}
  <h4 class="font-semibold mt-4 mb-2">Key Benefits</h4>
  <ul class="list-disc list-inside text-sm text-subtext-light dark:text-subtext-dark space-y-1">
    {% for benefit in site.gamingSidebar.benefits %}
    <li>{{ benefit }}</li>
    {% endfor %}
  </ul>
  {% endif %}
  {% if site.gamingSidebar.useCases %}
  <h4 class="font-semibold mt-4 mb-2">Best Use Cases</h4>
  <ul class="list-disc list-inside text-sm text-subtext-light dark:text-subtext-dark space-y-1">
    {% for useCase in site.gamingSidebar.useCases %}
    <li>{{ useCase }}</li>
    {% endfor %}
  </ul>
  {% endif %}
</div>
