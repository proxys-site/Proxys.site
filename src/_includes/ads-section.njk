{% macro renderAds(adsArray, isFullWidth) %}
{% if adsArray and adsArray.length > 0 %}
<div class="mb-8">
  <div class="{% if adsArray.length == 1 %}grid grid-cols-1 lg:grid-cols-3{% else %}grid grid-cols-1 {% if isFullWidth %}md:grid-cols-2 lg:grid-cols-3{% else %}md:grid-cols-2 lg:grid-cols-3{% endif %}{% endif %} gap-6">
    {% if adsArray.length == 1 %}<div class="lg:col-span-2">{% endif %}
    {% for ad in adsArray %}
    <a href="{{ ad.link }}" target="_blank" rel="noopener" class="block group">
      <div class="bg-gradient-to-br from-blue-50 to-indigo-50 dark:from-blue-900/20 dark:to-indigo-900/20 p-4 sm:p-5 rounded-xl border-2 border-blue-200 dark:border-blue-800 shadow-lg hover:shadow-2xl hover:scale-[1.02] transition-all duration-300 cursor-pointer h-full">
        <div class="flex flex-col sm:flex-row gap-3 sm:gap-4 h-full">
          <!-- Top/Left: Image -->
          <div class="flex-shrink-0 mx-auto sm:mx-0">
            <div class="w-20 h-20 sm:w-24 sm:h-24 bg-white dark:bg-gray-900 rounded-lg p-2 flex items-center justify-center shadow-sm">
              <img alt="{{ ad.name }} logo" class="w-full h-full object-contain" src="{{ ad.logo }}"/>
            </div>
          </div>
          
          <!-- Bottom/Right: Content -->
          <div class="flex-grow flex flex-col min-w-0">
            <div class="mb-2">
              <h3 class="text-sm sm:text-base font-bold flex flex-wrap items-center gap-1.5 sm:gap-2 group-hover:text-blue-600 dark:group-hover:text-blue-400 transition-colors">
                <span class="break-words">{{ ad.name }}</span>
                {% if ad.verified %}
                <svg height="12" width="12" viewBox="0 0 512 512" xmlns="http://www.w3.org/2000/svg" class="flex-shrink-0 sm:h-[14px] sm:w-[14px]"><path d="m512 268c0 17.9-4.3 34.5-12.9 49.7s-20.1 27.1-34.6 35.4c.4 2.7.6 6.9.6 12.6 0 27.1-9.1 50.1-27.1 69.1-18.1 19.1-39.9 28.6-65.4 28.6-11.4 0-22.3-2.1-32.6-6.3-8 16.4-19.5 29.6-34.6 39.7-15 10.2-31.5 15.2-49.4 15.2-18.3 0-34.9-4.9-49.7-14.9-14.9-9.9-26.3-23.2-34.3-40-10.3 4.2-21.1 6.3-32.6 6.3-25.5 0-47.4-9.5-65.7-28.6-18.3-19-27.4-42.1-27.4-69.1 0-3 .4-7.2 1.1-12.6-14.5-8.4-26-20.2-34.6-35.4-8.5-15.2-12.8-31.8-12.8-49.7 0-19 4.8-36.5 14.3-52.3s22.3-27.5 38.3-35.1c-4.2-11.4-6.3-22.9-6.3-34.3 0-27 9.1-50.1 27.4-69.1s40.2-28.6 65.7-28.6c11.4 0 22.3 2.1 32.6 6.3 8-16.4 19.5-29.6 34.6-39.7 15-10.1 31.5-15.2 49.4-15.2s34.4 5.1 49.4 15.1c15 10.1 26.6 23.3 34.6 39.7 10.3-4.2 21.1-6.3 32.6-6.3 25.5 0 47.3 9.5 65.4 28.6s27.1 42.1 27.1 69.1c0 12.6-1.9 24-5.7 34.3 16 7.6 28.8 19.3 38.3 35.1 9.5 15.9 14.3 33.4 14.3 52.4zm-266.9 77.1 105.7-158.3c2.7-4.2 3.5-8.8 2.6-13.7-1-4.9-3.5-8.8-7.7-11.4-4.2-2.7-8.8-3.6-13.7-2.9-5 .8-9 3.2-12 7.4l-93.1 140-42.9-42.8c-3.8-3.8-8.2-5.6-13.1-5.4-5 .2-9.3 2-13.1 5.4-3.4 3.4-5.1 7.7-5.1 12.9 0 5.1 1.7 9.4 5.1 12.9l58.9 58.9 2.9 2.3c3.4 2.3 6.9 3.4 10.3 3.4 6.7-.1 11.8-2.9 15.2-8.7z" fill="#1da1f2"></path></svg>
                {% endif %}
                {% if ad.label %}
                <span class="inline-flex items-center px-1.5 sm:px-2 py-0.5 rounded text-[10px] sm:text-xs font-semibold flex-shrink-0 whitespace-nowrap
                  {% if ad.label == 'Featured' %}bg-gradient-to-r from-orange-400 to-pink-500 text-white
                  {% elif ad.label == 'Sponsored' %}bg-blue-600 text-white
                  {% elif ad.label == 'Ad' %}bg-gray-600 text-white
                  {% else %}bg-gray-600 text-white{% endif %}">
                  {{ ad.label }}
                </span>
                {% endif %}
              </h3>
            </div>
            <p class="text-[11px] sm:text-xs text-gray-700 dark:text-gray-300 line-clamp-3 flex-grow break-words">{{ ad.description }}</p>
            <div class="mt-2 flex items-center text-blue-600 dark:text-blue-400 text-[11px] sm:text-xs font-semibold group-hover:gap-2 transition-all">
              <span class="whitespace-nowrap">Learn More</span>
              <svg class="w-3 h-3 sm:w-4 sm:h-4 group-hover:translate-x-1 transition-transform flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
              </svg>
            </div>
          </div>
        </div>
      </div>
    </a>
    {% endfor %}
    {% if adsArray.length == 1 %}</div>{% endif %}
  </div>
</div>
{% endif %}
{% endmacro %}
